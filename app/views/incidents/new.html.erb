<div class='well well-lg'>
  <%= simple_form_for @incident do |f| %>
    <%= f.association :incident_type, as: :select %>
    <%= f.input :description,
        hint: 'Please limit description to 100 characters' %>
    <%= f.input :address,
        hint: '123 Broadway Big City, NJ 12345' %>
    <%= f.submit %>
  <% end  %>
</div>
